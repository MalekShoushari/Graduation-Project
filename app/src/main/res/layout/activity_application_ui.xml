<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@color/Main_Color_Application"
    tools:openDrawer="start"
    tools:context=".application_UI">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:itemIconSize="30dp"
        app:itemIconPadding="25dp"
        app:drawerLayoutCornerSize="50dp"
        app:headerLayout="@layout/header"
        android:background="@color/Main_Color_Application_toolBar"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:subheaderColor="@color/white"
        app:menu="@menu/menu_app"
        android:layout_gravity="start"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <include layout="@layout/toolbar"
            android:id="@+id/toolBar"/>
        <ScrollView
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/name_app"
                    android:layout_marginBottom="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tourism_in_jordan_ui"
                    android:textColor="@color/main_text_color"
                    android:textSize="45sp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/alfont"

                    />

                <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/background_search"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/search_text_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor,TextFields" />

                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_search_icon"
                        android:padding="2dp"
                        android:src="@drawable/baseline_search_24"
                        android:contentDescription="@string/todo" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/test"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/categories"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="horizontal"

                    android:padding="10dp"
                    tools:ignore="NestedScrolling,ScrollViewCount">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:onClick="provinces_linear"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/linear_layout_style_2"
                            tools:ignore="UselessLeaf">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="50dp"
                                >
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:src="@drawable/provinces_icon"
                                    android:contentDescription="@string/todo" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/provinces"
                                android:layout_gravity="center"
                                android:textColor="@color/Main_Color_Application"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="25dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/linear_layout_style_2"
                            tools:ignore="UselessLeaf">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="50dp"
                                >
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:src="@drawable/children_museum_jordan"
                                    android:contentDescription="@string/todo" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/museum"
                                android:layout_gravity="center"
                                android:textColor="@color/Main_Color_Application"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="25dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/linear_layout_style_2"
                            tools:ignore="UselessLeaf">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="50dp"
                                >
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:src="@drawable/karak"
                                    android:contentDescription="@string/todo" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/antiquities"
                                android:layout_gravity="center"
                                android:textColor="@color/Main_Color_Application"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="25dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/linear_layout_style_2"
                            tools:ignore="UselessLeaf">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="50dp"
                                >
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:src="@drawable/hussen_parks"
                                    android:contentDescription="@string/todo" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tourist_places"
                                android:layout_gravity="center"
                                android:textColor="@color/Main_Color_Application"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="25dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>