<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_petra_edition"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".signUp_page">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/linear_layout_style"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/headerLogin"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new_account"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_registered_log_in_here"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sign_up_userName"
                android:maxLength="12"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPersonName"
                android:hint="@string/user_name"
                android:background="@drawable/background_plain_text_style"
                android:padding="10dp"
                tools:ignore="TextFields"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/sign_up_user_eMail"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPersonName"
                android:hint="@string/e_mail"
                android:background="@drawable/background_plain_text_style"
                android:padding="10dp"
                tools:ignore="TextFields"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/create_password_user"
                android:maxLength="10"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:hint="@string/create_password"
                android:background="@drawable/background_plain_text_style"
                android:padding="10dp"
                tools:ignore="TextFields"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/Confirm_password_user"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:hint="@string/re_password"
                android:background="@drawable/background_plain_text_style"
                android:padding="10dp"
                tools:ignore="TextFields"
                android:importantForAutofill="no" />
            <Button
                android:id="@+id/registration"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_style"
                android:text="@string/registration"
                android:textColor="@color/Main_Color_Application"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/signUpProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@drawable/linear_layout_style"
        />
</RelativeLayout>